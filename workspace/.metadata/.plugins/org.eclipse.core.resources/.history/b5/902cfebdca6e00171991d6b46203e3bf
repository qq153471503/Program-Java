interface Graphics{
	abstract public double getArea();
}

class Circular implements Graphics{
	
	private double pai = 3.141592;
	private double r;
	
	Circular(double r){
		if(r <= 0)
			throw new ValueException("数值不能为负数");
		this.r = r;
	}
	public double getArea(){
		return this.r*this.r*this.pai;
	}
}

class Rectangular implements Graphics{
	private double x;
	private double y;
	Rectangular(double x, double y){
		this.x = x;
		this.y = y;
	}
	
	public  double getArea(){
		return this.x*this.y;
	}
}


class ValueException extends Exception{
	ValueException(){
		
	}
	ValueException(String msg){
		super(msg);
	}
}
