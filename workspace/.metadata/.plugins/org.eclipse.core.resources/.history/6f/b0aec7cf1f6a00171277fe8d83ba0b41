class ArrayToolDemo{
	
	public static void main(String[] args) {
		
		int arr[] = {1,2,3,4};
		
		int arr2[] = {};
		
		System.out.println("Array Max is:"+(getArrayMax(arr)));
		System.out.println("Array Max is:"+(getArrayMax(arr2)));
	}
	
	public static int getArrayMax(int[] arr){

		if(arr.length <= 0)
		{
			System.out.println("Array Error !");
		}
		
		int max = arr[0];
		for(int i=0; i<arr.length-1; i++)
		{
			if(arr[i+1]>arr[i])
				max = arr[i+1];
		}
		return max;
	}
}