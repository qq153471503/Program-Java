class ArrayToolDemo{
	
	public static void main(String[] args) {
		
		int arr[] = {1,2,3,4};
		
		int arr2[] = {};
		
		System.out.println("Array Max is:"+(getArrayMax(arr)));
		System.out.println("Array Max is:"+(getArrayMax(arr2)));
	}
	
	public static int getArrayMax(int[] arr){

//使用数组元素方式
		if(arr.length <= 0)
		{
			System.out.println("Array Error !");
			return -1;
		}
//		
//		int max = arr[0];
//		for(int i=0; i<arr.length-1; i++)
//		{
//			if(arr[i+1]>arr[i])
//				max = arr[i+1];
//		}
//		return max;

//使用数组角标方式
		
		int max = 0;
		for(int i=0; i<arr.length; i++)
		{
			if(arr[i]>arr[max])
				max = i;
		}
		return arr[max];
	}
}