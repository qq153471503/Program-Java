import java.util.*;
class areaDemo{
	public static void main(String[] args){
		while(true)
		{
			Scanner input = new Scanner(System.in);
			System.out.print("请输入圆的半径： ");
			double r = input.nextDouble();
			System.out.print("圆的面积是： "+(r*3.141592654));
		}
	}
}

